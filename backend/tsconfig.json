{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@dp/model": [
        "src/model"
      ],
      "@dp/config": [
        "src/config/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}